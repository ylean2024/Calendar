<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ImageViewStyle">
        <item name="android:tint">@color/gray</item>
        <item name="android:background">?android:attr/windowBackground</item>
    </style>

    <style name="CircleStyle">
        <item name="android:tint">@color/background_button</item>
    </style>

    <style name="ButtonSearchStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle">
        <item name="backgroundTint">@color/dark_gray_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NavBottomIconColorStyle">
        <item name="itemIconTint">@color/dark_gray</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="android:background">@color/dark_purple</item>
    </style>

    <style name="RecyclerViewStyleText">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/value_16_sp</item>
    </style>

    <style name="RecyclerViewSmallText">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/value_12_sp</item>
    </style>

</resources>